window.addEventListener('load', () => {
    
    fetchAsync();
});

function showData(data){
    console.log()
    const user = document.querySelector('#user');
    user.textContent = data.results.email
}


function fetchNormal(){
    fetch('https://randomuser.me/api/?seed=javascript&results=100&nat=BR&noinfo').then(res => {
        res.json().then(data => {
            showData(data);
        });
    }).catch(error =>{
        console.log("erro na requisição")
    });
}

async function fetchAsync(){
    const res = await fetch('https://randomuser.me/api/?seed=javascript&results=100&nat=BR&noinfo');
    const json = await res.json();
    console.log(json)
}



async function fetchPeoples(){
    const res = await fetch('https://randomuser.me/api/?seed=javascript&results=100&nat=BR&noinfo');
    const json = await res.json();
    console.log(json);
    allPeoples = json.map(person => {
        const { gender } = person;
        return{
            name: person.name.first,
            lastName: person.name.last,
            pic: person.picture.https,
            dob: person.dob.date,
            gender: gender
        }
    });
    console.log(allPeoples)   
}



